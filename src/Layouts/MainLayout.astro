<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/node_modules/browser-detect/dist/browser-detect.umd.js"></script>
    <script>
        var browser = browserDetect();
        var isMobile = browser.mobile;
        
        console.log(browser);
        document.addEventListener('DOMContentLoaded', function() {
            document.body.classList.add("is-" + browser.name);
            browser.mobile && document.body.classList.add("is-mobile");
            document.getElementById('appinfo').innerHTML = isMobile;
        });
    </script>
    <!--[if lt IE 9]>
	    <script src="node_modules/html5shiv/dist/html5shiv.js"></script>
    <![endif]-->
